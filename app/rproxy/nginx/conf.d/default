server {
  listen 80 default_server;
  server_name _;
  root /var/www/html;

  location / {
    auth_request /auth;
    try_files $uri $uri/ =404;
  }

  location = /auth {
    proxy_pass http://radius_proxy/auth/;
    proxy_pass_request_body off;
    proxy_set_header Content-Length "";
    proxy_set_header X-Original-URI $request-uri;
  }
}